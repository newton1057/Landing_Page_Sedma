---
import Container from "@components/container.astro";
import Link from "@components/ui/link.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import { Icon } from "astro-icon/components";

const menuitems = [
  /**
   * 
   * 
   * {
    title: "Caracter√≠sticas",
    path: "#",
    children: [
      { title: "Sedma WebScrapper", path: "/" },
      { title: "Sedma IU", path: "#" },
      { title: "Sedma SC", path: "#" },
      { title: "Sedma Analytics", path: "/404" },
    ],
  },
  {
    title: "Precio",
    badge: false,
    path: "/pricing",
  },
   */
  {
    title: "Sobre nosotros",
    path: "/about",
  },
  /**
   * {
    title: "Blog",
    path: "/blog",
  },
   */
  {
    title: "Contacto",
    path: "/contact",
  },
  /*
  {
    title: "Pro Version",
    badge: true,
    path: "https://astroship-pro.web3templates.com/",
  },
   */
];
---

<Container>
  <header
    class="flex flex-col lg:flex-row justify-between items-center my-5 text-secondary">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-3xl"><span class="font-bold">Sedma</span></a>
        <div class="block lg:hidden">
          <MenuIcon class="w-8 h-8" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-secondary">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>
        <div class="lg:hidden flex items-center mt-3 gap-4">
          {
            /**
             * <Link href="#" style="muted" block size="md">Acceder</Link>
             */
          }
          <Link
            href="http://sedmaiu.s3-website-us-east-1.amazonaws.com/"
            size="md"
            block>Acceder</Link
          >
        </div>
      </MenuItems>
    </Astronav>
    <div>
      <div class="hidden lg:flex items-center gap-4">
        {
          /**
           * <a href="#">Acceder</a>
           */
        }
        <Link
          href="http://sedmaiu.s3-website-us-east-1.amazonaws.com/"
          size="md"
          target="_blank"
          class="flex gap-2 items-center justify-center"
          >
          <Icon class=" w-5 h-5" name="bx:bxs-log-in"/>
          Acceder
          </Link
        >
      </div>
    </div>
  </header>
</Container>
